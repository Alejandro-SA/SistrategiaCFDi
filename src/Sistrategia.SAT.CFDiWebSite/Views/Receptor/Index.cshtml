@using Sistrategia.SAT.CFDiWebSite.Models
@model ReceptorIndexViewModel
@{
  ViewBag.Title = "Lista de Receptores";
}
<div class="page-header clearfix">
  <h1 class="pull-left">@ViewBag.Title</h1>
  <div class="pull-right">
    <div class="btn-group" style="bottom: 26px;position: relative;top:26px;">
      @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary", @role = "button" })
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="media-list list-inline">
      @foreach (var receptor in Model.Receptores) {
        <li class="media">
          <div class="media-left">
            <a style="text-decoration: none" href="~/Receptor/Details/@receptor.PublicKey.ToString("N")">
              <div class="circle noselect">                
                <span>@receptor.Nombre.Substring(0, 1)</span>
              </div>
            </a>
          </div>
          <div class="media-body">
            <h4 class="media-heading">@Html.ActionLink(@receptor.Nombre, "Details", "Receptor", new { Id = @receptor.PublicKey.ToString("N") }, null)</h4>
            <h5 class="media-heading">@receptor.RFC</h5>            
          </div>
        </li>
      }
    </ul>

  </div>
</div>
